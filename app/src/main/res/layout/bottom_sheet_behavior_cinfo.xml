<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:orientation="vertical"
        android:id="@+id/bsheetinfo"
        android:background="@color/white"


        >

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#CDD5DA"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"

            ></View>






        <androidx.cardview.widget.CardView
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="#D4F1F1"
            app:cardCornerRadius="20dp"



            >

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/cna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"

                    android:digits="qwertyuiopasdfghjklzxcvbnm 1234567890 QWERTYUIOPASDFGHJKLZXCVBNM"
                    android:backgroundTint="@color/color1"
                    android:hint="Enter Customer Name"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/robotocondensedregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    />


                <EditText
                    android:id="@+id/cno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"

                    android:hint="Enter Customer Num"
                    android:backgroundTint="@color/color1"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/robotocondensedregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"


                    />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cna"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#989D9E"
                    android:text="Customer Num" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#989D9E"
                    android:text="Customer Name" />

                <TextView
                    android:id="@+id/invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/robotocondensedregular"
                    android:shadowColor="@color/color1"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="--.--"
                    android:textColor="@color/color1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/datee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/robotocondensedregular"
                    android:text=" 20/02/2021"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="80dp"
            android:text="Add product"
            android:textColor="@color/white"
            android:id="@+id/showcart"
            >


        </Button>

    </LinearLayout>









</androidx.coordinatorlayout.widget.CoordinatorLayout>



